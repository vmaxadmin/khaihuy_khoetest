<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_res_ward_tree" model="ir.ui.view">
        <field name="name">Wards</field>
        <field name="model">res.ward</field>
        <field name="arch" type="xml">
            <tree string="Wards" editable="bottom" import="0">
                <field name="name"/>
                <field name="code"/>
                <field name="district_id"/>
            </tree>
        </field>
    </record>

    <record id="view_res_ward_search" model="ir.ui.view">
        <field name="name">Wards</field>
        <field name="model">res.ward</field>
        <field name="arch" type="xml">
            <search string="Wards">
                <field name="name" filter_domain="['|',('name','ilike',self),('code','ilike',self)]"/>
                <field name="district_id"/>
                <group expand="0" string="Group By">
                    <filter name="group_by_district" string="District" context="{'group_by':'district_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="action_config_ward" model="ir.actions.act_window">
        <field name="name">Wards</field>
        <field name="res_model">res.ward</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">tree</field>
    </record>
</odoo>