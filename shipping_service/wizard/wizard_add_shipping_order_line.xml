<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="add_shipping_order_line_view" model="ir.ui.view">
            <field name="name">add.shipping.order.line.view</field>
            <field name="model">shipping.order.line.wizard</field>
            <field name="arch" type="xml">
                <form string="Add Shipping Line">
                    <group>
                        <group>
                            <field name="partner_source_id"/>
                            <field name="from_address" />
                        </group>
                         <group>
                            <field name="order_type"/>
                            <field name="repair_id" attrs="{'invisible': [('order_type', '!=', 'repair')], 'required':[('order_type', '=', 'repair')]}"/>
                            <field name="sale_id" attrs="{'invisible': [('order_type', '!=', 'sale')], 'required':[('order_type', '=', 'sale')]}"/>
                            <field name="purchase_id" attrs="{'invisible': [('order_type', '!=', 'purchase')], 'required':[('order_type', '=', 'purchase')]}"/>
                            <field name="partner_shipping_id" required="1"/>
                            <field name="to_address" required="1"/>
                            <field name="phone"/>
                            <field name="note"/>
                        </group>
                        <group invisible="1">
                            <field name="extra_amount_id" invisible="1"/>
                            <field name="extra_amount" invisible="1"/>
                        </group>
                    </group>
                    <footer>
                        <button string="Add" name="action_add_shipping_line" type="object" default_focus="1" class="btn-primary"/>
                        <button string="Cancel" class="btn-default" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_add_shipping_order_line" model="ir.actions.act_window">
            <field name="name">Add Shipping Line</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">shipping.order.line.wizard</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="shipping_service.add_shipping_order_line_view"/>
            <field name="target">new</field>
        </record>
    </data>
</odoo>